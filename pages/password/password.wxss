/* pages/password/password.wxss */

.password-page{
  margin-top: 70rpx;

  margin-left: 36rpx;
  width: 676rpx;
  display: flex;
  align-items: center;
  flex-direction: column;
}

.password-header {
  width: 676rpx;
  height: 300rpx;
  opacity: 1;
  text-align: center;

}
/* 页眉图片设计 */
.password-header image {
  width: 98%;
  height: 100%;
}
.tips {
  margin-top: 30rpx;
  width: 592rpx;
  height: 40rpx;
  font-size: 24rpx;
  font-weight: normal;
  line-height: 34rpx;
  text-align: center;
}

/* 验证码框 */
.register {
  position: relative;
  width: 100%;
  height: 160rpx;
  margin-top: 24rpx;
}
.register-photocode-ul{
  display: flex;
  justify-content: space-between;
  align-items: center;
  height: 100%;
  width: 100%;
}

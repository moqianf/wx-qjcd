.register-photocode-li{
  height: 100%;
  width: 18.13%;
  border-radius: 12px;
  border: 1px solid #bbb;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  /* font-size: 56rpx; */
  text-align: center;
  font-size:96rpx;
}

/* 输入框代码，技术难度过高而无法完成 */
.register input {
  position: absolute;
  padding-left:30rpx;
  display: flex;
  top: 0;
  height: 100%;
  width: 100%;
  letter-spacing: 60rpx !important;
  font-size: 96rpx; 
}


